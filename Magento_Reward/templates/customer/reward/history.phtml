                        <th scope="col" class="col date">
                            <?= /* @escapeNotVerified */ __('Date'); ?>
                        </th>
                    </tr>
                </thead>

                <tbody>
                    <?php foreach ($history as $item): ?>
                        <tr>
                            <td data-th="<?= /* @escapeNotVerified */ $block->escapeHtml(__('Balance')); ?>" class="col balance">
